extends layout

block content
  h1=title
  br
  .userErrors
    .alert.alert-danger#registerErrorExists(style='max-width: 300px; padding:5px; text-align:center; display:none;') User with that email already exists.&nbsp;
      a.alert-link(href="/login") Login here.
    .alert.alert-danger#registerErrorGeneric(style='max-width: 300px; padding:5px; text-align:center; display:none;') Cannot register user at the moment. Please try again!
    .alert.alert-danger#registerErrorIncomplete(style='max-width: 300px; padding:5px; text-align:center; display:none;') Please fill in all fields!
    .alert.alert-danger#registerErrorEmail(style='max-width: 300px; padding:5px; text-align:center; display:none;') Please use a correct email format!

  #registerUser
    fieldset(style="width:300px;")
      .form-group
          input#inputFirstName.form-control(type='text', name="firstName", placeholder='First Name')
      .form-group
          input#inputLastName.form-control(type='text', name="lastName", placeholder='Last Name')
      .form-group
          input#inputEmail.form-control(type='text', name="email", placeholder='Email')
      .form-group
          input#inputUsername.form-control(type='text', name="username", placeholder='Username')
      .form-group
        input#inputPassword.form-control(type='password', name="password", placeholder='Password')
      button#btnRegisterUser.btn.btn-primary Register
      | &nbsp;
      | &nbsp;
      a(href='/')
        button.btn.btn-danger(type="button") Cancel
