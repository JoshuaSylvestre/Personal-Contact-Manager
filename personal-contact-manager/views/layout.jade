  body
    script(src='http://ajax.googleapis.com/ajax/libs/jquery/2.0.3/jquery.min.js')
    script(src='/javascripts/global.js')
    nav.navbar.navbar-expand-lg.navbar-dark.bg-primary.navbar-default(style="margin-bottom:20px;")
      a.navbar-brand(href='/') Personal Contact Manager
      button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarColor01', aria-controls='navbarColor01', aria-expanded='false', aria-label='Toggle navigation')
        span.navbar-toggler-icon

      #navbarColor01.collapse.navbar-collapse
        ul.navbar-nav.mr-auto.navbar-left
          li.nav-item([routerlinkactive]="['active']", [routerlinkactiveoptions]='{exact:true}')
            a.nav-link(href='/')
              | Home
            span.sr-only (current)
          if(user)
            li.nav-item([routerlinkactive]="['active']", [routerlinkactiveoptions]='{exact:true}')
              a.nav-link(href='/users/contacts') Contacts
            li.nav-item([routerlinkactive]="['active']", [routerlinkactiveoptions]='{exact:true}')
              a.nav-link(href='/users/profile') Profile
          li.nav-item([routerlinkactive]="['active']", [routerlinkactiveoptions]='{exact:true}')
            a.nav-link(href='/users/about') About

        ul.navbar-nav.navbar-right
          if(user)
            li.nav-item([routerlinkactive]="['active']", [routerlinkactiveoptions]='{exact:true}')
              a.nav-link(href='/logout') Logout
          if(!user)
            li.nav-item([routerlinkactive]="['active']", [routerlinkactiveoptions]='{exact:true}')
              a.nav-link(href='/login') Login
            li.nav-item([routerlinkactive]="['active']", [routerlinkactiveoptions]='{exact:true}')
              a.nav-link(href='/register') Register

    .container
      block content

  script(src='http://code.jquery.com/jquery.js')
